<UserControl x:Class="Dependencies.Viewer.Wpf.Controls.Views.AnalyseResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:Dependencies.Viewer.Wpf.Controls.Behaviors"
             xmlns:models="clr-namespace:Dependencies.Viewer.Wpf.Controls.Models"
             mc:Ignorable="d" 
             x:Name="analyserResultView"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <InputBindingCollection x:Key="inputCollection" x:Shared="False">
            <MouseBinding Gesture="MiddleClick" 
                          Command="{Binding ElementName=analyserResultView, Path=DataContext.OpenSubResultCommand}"
                          CommandParameter="{Binding}">
            </MouseBinding>
        </InputBindingCollection>
    </UserControl.Resources>
    
    <DockPanel>
        <GroupBox Header="Filters" DockPanel.Dock="Top">
            <GroupBox.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </GroupBox.Resources>
            
            <StackPanel Orientation="Horizontal" Style="{DynamicResource DefaultGroupContentStyle}">
                <TextBlock Text="Local only" />
                <ToggleButton IsChecked="{Binding DisplayLocalOnly}" Margin="10 0"/>

                <TextBlock Text="Name :" Margin="30 0 10 0"/>
                <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Dlls" DockPanel.Dock="Top">
            <TreeView ItemsSource="{Binding FilteredLinks}">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource TestTreeViewItem}">
                        <Setter Property="behaviors:InputBindingBehavior.InputBindings" Value="{StaticResource inputCollection}"/>
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Assembly.IsLocalAssembly}" Value="true">
                                <Setter Property="Background" Value="LightBlue"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Assembly.IsLocalAssembly}" Value="false">
                                <Setter Property="Background" Value="LightGray"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Assembly.IsNative}" Value="true">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Assembly.IsResolved}" Value="false">
                                <Setter Property="Background" Value="Red"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AssemblyModel.IsVisible}" Value="false">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsVisible" Value="True">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="models:AssemblyLinkModel"  ItemsSource="{Binding AssemblyModel.FilteredLinks}">
                        <TextBlock Text="{Binding}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </GroupBox>
    </DockPanel>
</UserControl>
